<% include header %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <% if (manuale) { %>
        <form class="add-user-form" action="" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-">
                <div class="form-group col-md-4">
                    <label for="Titlu_auxiliar">Titlu manual</label>
                    <input type="text" class="form-control" name="Titlu_auxiliar" id="Titlu_auxiliar" value="<%= manuale.Titlu_auxiliar %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="Disciplina">Disciplina</label>
                    <input type="text" class="form-control" name="Disciplina" id="Disciplina" value="<%= manuale.Disciplina %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="Nivel">Nivel</label>
                    <input type="text" class="form-control" name="Nivel" id="Nivel" placeholder="Nivel:" value="<%= manuale.Nivel %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="Clasa">Clasa</label>
                    <input type="text" class="form-control" name="Clasa" id="Clasa" value="<%= manuale.Clasa %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="Comisia_nr">Comisia_nr</label>
                    <input type="text" class="form-control" name="Comisia_nr" id="Comisia_nr" value="<%= manuale.Comisia_nr %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Actualizeaza date:</button>
        </form>
    <% } else { %>
        <p class="text-center">Date negasite. Adauga <a href="/manuale-add">noi</a> date.</p>
    <% } %>
</div>
</div>
<% include footer %>