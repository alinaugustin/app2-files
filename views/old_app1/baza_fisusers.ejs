<%- include header %>
<div class="table-wrapper">
    <% if (utilizatori) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nr</th>
                    <th scope="col">Nume</th>
                    <th scope="col">Prenume</th>
                    <th scope="col">Telefon</th>
                    <th scope="col">Email</th>
                    <th scope="col">Username</th>
                    <th scope="col">Fisier PDF</th>
                </tr>
            </thead>
            <tbody>
                <% utilizatori.forEach((utilizatori, nr) => { %>
                    <tr>
                        <th scope="row"><%= utilizatori.id %></th>
                        <td><%= utilizatori.first_name %></td>
                        <td><%= utilizatori.last_name %></td>
                        <td><%= utilizatori.mob_no %></td>
                        <td><%= utilizatori.email %></td>
                        <td><%= utilizatori.user_name %></td>
                        <td>
                            <a href="/baza-fisusers/down/<%= utilizatori.id %>">Raport</a>   
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">Niciun fisier incarcat.</p>
    <% } %>
</div>
 <%- include footer %>