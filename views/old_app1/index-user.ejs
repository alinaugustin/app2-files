<% include partials/header-user.ejs %>
    <div class="table-wrapper">
        <% if (users.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Number</th>
                        <th scope="col">Username</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><%= user.first_name %></td>
                            <td><%= user.last_name %></td>
                            <td><%= user.position %></td>
                            <td><%= user.number %></td>
                            <td>@<%= user.user_name %></td>
                            <td>
                                <a href="/user/edit/<%= user.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Editeaza</a>
                                <a href="/user/delete/<%= user.id %>" class="btn btn-sm btn-danger">Sterge</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">Niciun utilizator gasit. Click <a href="/user/add" >aici</a> sa adaugati utilizatori.</p>
        <% } %>
    </div>
</div>
</body>
</html>