<%- include header %>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >

      <div class="panel panel-info">
        <div class="panel-heading">
          <center><h3 class="panel-title">Bine ai venit, <%=data[0].first_name%> <%=data[0].last_name%>!</h3></center>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="/pictures/default.jpg" class="img-circle img-responsive"> </div>
            <div class=" col-md-9 col-lg-9 "> 
              <table class="table table-user-information">
                <tbody>
                    <tr>
                        <td>Id:</td>
                        <td><%=data[0].id%></td>
                      </tr>
                  <tr>
                    <td>Utilizator(User):</td>
                    <td><%=data[0].user_name%></td>
                  </tr>
                  <tr>
                    <td>Telefon mobil:</td>
                    <td><%=data[0].mob_no%></td>
                  </tr>
                  <tr>
                    <td>E-mail:</td>
                    <td><%=data[0].email%></td>
                    </tr>
                    <tr>
                      <td>Rol:</td>
                      <td><%=data[0].rol%></td>
                      </tr> 
                  </tbody>
                <tr>
                    <td>
                        <a href="/profile/edit/<%=data[0].id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Editeaza</a>
                    </td>
                  </tr>
              </table>
            </div>
          </div>
        </div>
    </div>
 <%- include footer %>